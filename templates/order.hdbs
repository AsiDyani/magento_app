<h4>{{t "order.details"}} <a target="_blank" href="{{order.admin_url}}">{{order.id}}</a><h4>

<h5>{{t "order.store"}}</h5>
<p>{{{order.store}}}</p>

<h5>{{t "order.status"}}</h5>
<p><span class="badge badge-{{order.status}}">{{order.status}}</span></p>

<h5>{{t "order.currency"}}</h5>
<p>{{order.currency}}</p>

<h5>{{t "order.total"}}</h5>
<p>{{order.total}}</p>

<h5>{{t "order.created"}}</h5>
<p>{{order.created}}</p>

{{#if order.tracking_info}}
<br />
<h4>{{t "order.tracking_info"}}<h4>
<h5>{{t "order.tracking_title"}}</h5>
<p>{{order.tracking_info.title}}</p>

<h5>{{t "order.tracking_number"}}</h5>
<p><a href="{{order.tracking_info.otd_tracking_url}}" onclick="PopupCenter('{{order.tracking_info.otd_tracking_url}}','xtf','900','500'); return false;">{{order.tracking_info.number}}</a></p>

<h5>{{t "order.additional_tracking_number"}}</h5>
<p><a href="{{order.tracking_info.sapo_tracking_url}}" onclick="PopupCenter('{{order.tracking_info.sapo_tracking_url}}','xtf','900','500'); return false;">{{order.tracking_info.additional_track_number}}</a></p>
{{/if}}

<script language="javascript" type="text/javascript">
