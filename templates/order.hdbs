<h4>{{t "order.details"}} <a target="_blank" href="{{order.admin_url}}">{{order.id}}</a></h4>

<table class="table-borderless">
    <tr>
        <td>
            <h5>{{t "order.created"}}</h5>
            <p>{{order.created}}</p>
        </td>
        <td>
            <h5>{{t "order.status"}}</h5>
            <p><span class="badge badge-{{order.status}}">{{order.status}}</span></p>
        </td>
    </tr>
    <tr>
        <td>
            <h5>{{t "order.payment_method"}}</h5>
            <p>{{order.payment_info.method}}{{#if order.payment_info.cc_type}}:&nbsp;{{order.payment_info.cc_type}}{{/if}}</p>
        </td>
        <td>
            <h5>{{t "order.total"}}</h5>
            <p>{{order.total}}</p>
          </td>
        </tr>
</table>

<div class="order-comments">
    {{#if order.comments}}
    <h5><a href="#" class="toggle-comments">{{t "order.comments"}}</a></h5>
    <div class="hide">
        <table class="table table-condensed">
            <tbody>
            {{#order.comments}}
                <tr>
                    <td>
                        <p><strong>{{date}}</strong> {{time}} | <strong>{{status}}</strong></p>
                        <p>{{t "customer"}} <small><strong>{{customer_notified}}</strong></small></p>
                        <p>{{comment}}</p>
                    </td>
                </tr>
            {{/order.comments}}
            </tbody>
        </table>
    </div>
    {{/if}}
</div>

{{#if order.tracking_info}}
<div class="tracking-info">
    <h4>{{t "order.tracking_info"}}</h4>
    <h5>{{t "order.tracking_title"}}</h5>
    <p>{{order.tracking_info.title}}</p>

    <h5>{{t "order.lms_tracking_number"}}</h5>
    <p><a href="{{order.tracking_info.lms_tracking_url}}" onclick="PopupCenter('{{order.tracking_info.lms_tracking_url}}','xtf','900','500'); return false;">{{order.tracking_info.number}}</a></p>

    {{#if order.tracking_info.sapo_tracking_url}}
    <h5>{{t "order.sapo_tracking_number"}}</h5>
    <p><a href="{{order.tracking_info.sapo_tracking_url}}" onclick="PopupCenter('{{order.tracking_info.sapo_tracking_url}}','xtf','900','500'); return false;">{{order.tracking_info.sapo_track_number}}</a></p>
    {{/if}}
</div>
{{/if}}

