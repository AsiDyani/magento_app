<div>
	<h4><a href="#">{{name}}</a></h4>
	{{#if recent_orders}}
	<table class="table table-condensed">
		<thead>
			<tr>
				<th>{{t "recent_orders.order_number"}}</th>
				<th>{{t "recent_orders.status"}}</th>
			</tr>
		</thead>
		<tbody>
			{{#recent_orders}}
			<tr class="_tooltip" data-title="{{titles}}" data-placement="top">
				<td><a href="{{order_uri}}">#{{id}}</td>
				<td><span class="badge badge-{{status_code}}">{{status}}</a></td>
			</tr>
			{{/recent_orders}}
		</tbody>
	</table>
	{{/if}}
	<h5>{{t "profile.customer_since"}}</h5>
	<p>{{customer_since}}</p>
</div>